<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit Document</h1>
    
    <%= form_for(@document) do |f| %>
     
      <% if @document.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@document.errors.count, "error") %> prohibited
            this account from being saved:
          </h2>
          <ul>
            <% @document.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div>
        <iframe src=<%= @document.doc.url %> width = "100%" height="200%"> </iframe>
      </div>
     
      <p>
        <%= f.label :doc,"Document" %><br>
        <%= f.file_field :doc, class: "form-control" %>
      </p>

      <p>
        <%= f.hidden_field :transaction_id, value: @transaction.id %>
      </p>
     
      <p>
        <%= f.submit 'Update Document', :class => 'btn btn-primary form-control' %>
      </p>
     
    <% end %>
     
    <%= link_to 'Back', account_transactions_path(@transaction.account_id) %>
  </div>
</div>