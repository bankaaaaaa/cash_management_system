<div class="row">
  	<div class="col-md-6 col-md-offset-3">

		<h1>Add account</h1>
		<%= form_for :account, url: accounts_path do |f| %>
		  <p>
		    <%= f.label :name, "Enter name of Account:" %><br>
		    <%= f.text_field :name, class: "form-control" %>
		  </p>
		 
		  <p>
		    <%= f.submit 'Add Accout', :class => 'btn btn-primary form-control' %>
		  </p>
		  
		<% end %>
		<p>
		  <%= link_to "Back", accounts_path %>
		</p>
	</div>
</div>