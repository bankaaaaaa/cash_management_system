<div class="row">
  <div class="col-md-6 col-md-offset-3">    
    <h1>Accounts :</h1>
     
    <table class="table table-bordered">
      <tr>
        <th>Account Name</th>
        <th>Show Account Button</th>
        <th>Edit Account Button</th>
      </tr>
     
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= link_to "Show", account_transactions_path(account.id) %></td>
        <td><%= link_to "Edit", edit_account_path(account) %></td>
        
      </tr>
    <% end %>
    </table>
     
    <br>
     
    <%= link_to "Create New account", new_account_path, class: 'btn btn-primary form-control' %>
  </div>
</div>
